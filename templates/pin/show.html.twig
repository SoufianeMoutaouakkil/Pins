{% extends 'base.html.twig' %}

{% block body %}
    <div class="my-4">
        <h3 class="display-3">{{ pin.title }}</h3>
        <p>{{ pin.description }}</p>
        <img
            src="{{ pin.imageName ? vich_uploader_asset(pin) : asset('images/pins/empty.jpg') }}"
            class="img-thumbnail shadow"
            style="height: 250px;"
            alt="{{ pin.title }}"
        >
    </div>
    <a href="{{ path('pin_index') }}" class="btn btn-primary">
        Show all Pins
    </a>
    <a href="{{ path('pin_update', {'id': pin.id}) }}" class="btn btn-outline-primary">
        Update this Pin
    </a>
{% endblock %}
